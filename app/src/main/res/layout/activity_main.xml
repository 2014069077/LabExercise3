<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uy.labexercise3.MainActivity">

    <TextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data:"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/etData"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tvData"
        android:layout_marginLeft="130dp"
        />

    <TextView
        android:id="@+id/tvFilename"
        android:layout_below="@id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filename:"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/etFilename"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tvFilename"
        android:layout_marginLeft="130dp"
        />

    <Button
        android:id="@+id/btnSP"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etFilename"
        android:text="Shared Pref"
        android:onClick="sharedPref"
        />

    <Button
        android:id="@+id/btnIS"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSP"
        android:text="Internal Storage"
        android:onClick="internalStorage"
        />

    <Button
        android:id="@+id/btnIC"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnIS"
        android:text="Internal Cache"
        android:onClick="internalCache"
        />

    <Button
        android:id="@+id/btnEC"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnIC"
        android:text="External Cache"
        android:onClick="externalCache"
        />

    <Button
        android:id="@+id/btnES"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEC"
        android:text="External Storage"
        android:onClick="externalStorage"
        />

    <Button
        android:id="@+id/btnEPS"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnES"
        android:text="Ext Public Storage"
        android:onClick="extPublicStorage"
        />

    <Button
        android:id="@+id/btnNext"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEPS"
        android:text="Next"
        android:onClick="goNext"
        />




</RelativeLayout>


